<%= form_for @post do |f| %>
  <%= f.text_field :title %><br />
  <%= f.text_field :content %><br />
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br />
  <%= f.fields_for :categories, @post.categories.build do |ff| %><br />
    <%= ff.text_field :name%>
  <% end %>
  <%= f.submit %>
<% end %>
