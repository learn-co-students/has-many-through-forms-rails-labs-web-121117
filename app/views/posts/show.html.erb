<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
  <% end %>
</ul>

  <% @post.comments.map(&:user).uniq.each do |user| %>
    <%= link_to user.username, user_path(user) %>
  <% end %>

  <% @post.categories.each do |c| %>
    <%= c.name %>
  <% end %>
